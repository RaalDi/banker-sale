      <column name="state" type="VARCHAR(255)" />
      <column name="session_id" type="BIGINT">
        <constraints nullable="false" />
      </column>
      <column name="created_date" type="TIMESTAMP(6) WITHOUT TIME ZONE">
        <constraints nullable="false" />
      </column>
      <column name="created_by" type="VARCHAR(16)">
